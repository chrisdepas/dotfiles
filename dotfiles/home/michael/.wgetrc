#
# Description
# -----------
# User wget configuration file.
#
###############################################################################

## Connection failures

# Number of retries
tries = 3

# 2 minute timeout
timeout = 60

# Wait on retry.
waitretry = 14

## Downloads

# Maximum recursive download depth
reclevel = 5

# Add extensions to some downloaded files
adjust_extension = on

# Don't go up directories when downloading recursively
no_parent = on

## Stealth

# Incognito
user-agent = Mozilla/5.0 (Windows NT 6.1; Win64; x64; rv:52.0) Gecko/20100101 Firefox/52.0

# Wait a second between connections.
wait = 1

# Ignore robots.txt
robots = off

# Default headers
header = Accept: */*
header = Accept-Language: en-US,en;q=0.5
header = Accept-Encoding: gzip, deflate, br
header = DNT: 1
header = Pragma: no-cache
header = Cache-Control: no-cache
header = Upgrade-Insecure-Requests: 1

## Misc

# Use timestamping by default
timestamping = on

# Follow FTP links from HTML documents by default
follow_ftp = on

# Print server responses

