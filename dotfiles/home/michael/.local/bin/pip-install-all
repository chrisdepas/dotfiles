#!/usr/bin/env bash
# -*- coding: UTF-8 -*-
###############################################################################
# pip-install-all
# ===============
#
# Version:               1.0.0
# Author:                Michael De Pasquale
# Creation Date:         2018-01-28
# License:               None
#
# Description
# -----------
# Installs a package in python2.7, 3.5 and 3.6.
# 
###############################################################################

if [ -z $1 ]; then 
    echo 'No package specified.'
    exit 1
fi
    
# Install in all python versions
python -m pip install --user $1
python3 -m pip install --user $1
python3.6 -m pip install --user $1

exit 0
