#!/usr/bin/env bash
# -*- coding: UTF-8 -*-
###############################################################################
# pip-uninstall-all
# =================
#
# Version:               1.0.0
# Author:                Michael De Pasquale <shaggyrogers>
# Creation Date:         2018-02-26
# Modification Date:     2018-02-26
# License:               MIT
#
# Description
# -----------
# Removes a package from Python 2.7, 3.5 and 3.6.
#
###############################################################################

if [ -z $1 ]; then
    echo 'No package specified.'
    exit 1
fi

# Install in all python versions
python -m pip uninstall --user $1
python3 -m pip uninstall --user $1
python3.6 -m pip uninstall --user $1

exit 0
